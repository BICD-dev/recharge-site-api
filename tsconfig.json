{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    
    "rootDir": "./src",
    "outDir": "./dist",

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "sourceMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,

    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
